<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Base dark background -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/background_darker" />
        </shape>
    </item>
    
    <!-- Sacred geometry pattern -->
    <item>
        <bitmap
            android:src="@drawable/pattern_sacred"
            android:tileMode="repeat"
            android:alpha="0.035" />
    </item>
    
    <!-- Mystic glow effects -->
    <item>
        <shape android:shape="oval">
            <gradient
                android:type="radial"
                android:gradientRadius="800dp"
                android:centerX="0.2"
                android:centerY="0.8"
                android:startColor="#102D1B54"
                android:endColor="#00000000" />
        </shape>
    </item>
    
    <item>
        <shape android:shape="oval">
            <gradient
                android:type="radial"
                android:gradientRadius="600dp"
                android:centerX="0.8"
                android:centerY="0.2"
                android:startColor="#10004D56"
                android:endColor="#00000000" />
        </shape>
    </item>
</layer-list> 