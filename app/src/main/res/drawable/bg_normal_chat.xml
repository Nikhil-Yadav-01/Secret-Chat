<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Base background -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/background_dark" />
        </shape>
    </item>
    
    <!-- Pattern overlay -->
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:type="linear"
                android:angle="315"
                android:startColor="#00121212"
                android:centerColor="#05121212"
                android:endColor="#10121212" />
        </shape>
    </item>
    
    <!-- Abstract security network lines -->
    <item>
        <bitmap
            android:src="@drawable/pattern_network"
            android:tileMode="repeat"
            android:alpha="0.03" />
    </item>
</layer-list> 